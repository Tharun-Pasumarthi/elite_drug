# Base URL for your application (required for proper Open Graph images and sharing)
# In production, this should be your actual Vercel deployment URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Admin Authentication
# Use bcrypt to generate password hash: bcrypt.hash('your-password', 10)
ADMIN_EMAIL=admin@elitedrug.com
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password

# JWT Secret for authentication (generate a strong random string)
# You can generate one with: openssl rand -hex 64
JWT_SECRET=your_secure_jwt_secret_at_least_32_characters

# Optional: Enable URL encryption/obfuscation for product links
# Set to 'true' to enable, or leave empty/false to use plain slugs
NEXT_PUBLIC_ENABLE_URL_ENCRYPTION=false

# Google AI (Gemini) for product generation (optional)
GOOGLE_AI_API_KEY=your_google_ai_api_key
